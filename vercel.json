{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {"maxLambdaSize": "15mb"}
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {"src": "/api/(.*)", "dest": "/api/index.py"},
    {"src": "/(.*\\.css)$", "dest": "/frontend/$1"},
    {"src": "/(.*\\.js)$", "dest": "/frontend/$1"},
    {"src": "/(.*)", "dest": "/frontend/index.html"}
  ],
  "env": {
    "VERCEL": "1",
    "DATABASE_URL": "sqlite:///tmp/attendance.db",
    "SECRET_KEY": "@secret-key",
    "ALLOWED_ORIGINS": "*"
  },
  "functions": {
    "api/index.py": {"memory": 512, "maxDuration": 10}
  }
}
